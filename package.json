{
  "name": "cascade",
  "version": "0.1.0",
  "private": true,
  "description": "CSS Foundation Layers with StyleX integration and motion compiler",
  "scripts": {
    "build": "pnpm -r --filter '@cascade/*' build",
    "dev": "pnpm --filter demo dev",
    "test": "pnpm -r --filter '@cascade/*' test",
    "test:watch": "pnpm -r --filter '@cascade/*' test:watch",
    "test:ui": "vitest --ui",
    "lint": "pnpm -r --filter '@cascade/*' lint",
    "typecheck": "pnpm -r --filter '@cascade/*' typecheck",
    "clean": "pnpm -r exec rm -rf dist node_modules"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^14.3.1",
    "@types/node": "^20.10.0",
    "@vitest/ui": "^1.1.0",
    "typescript": "^5.3.3",
    "vitest": "^1.1.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  },
  "packageManager": "pnpm@10.14.0+sha512.ad27a79641b49c3e481a16a805baa71817a04bbe06a38d17e60e2eaee83f6a146c6a688125f5792e48dd5ba30e7da52a5cda4c3992b9ccf333f9ce223af84748"
}
