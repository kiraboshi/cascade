{
  "name": "@cascade/compiler",
  "version": "0.1.0",
  "description": "Token compiler, StyleX integration, and motion compiler",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.mjs",
      "require": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./src/vite-plugin": {
      "import": "./src/vite-plugin.ts",
      "require": "./src/vite-plugin.ts",
      "types": "./src/vite-plugin.ts"
    },
    "./vite-plugin": {
      "import": "./src/vite-plugin.ts",
      "require": "./src/vite-plugin.ts",
      "types": "./src/vite-plugin.ts"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsc && node scripts/generate-types.js",
    "typecheck": "tsc --noEmit",
    "generate-types": "node scripts/generate-types.js",
    "test": "vitest run",
    "test:watch": "vitest"
  },
  "dependencies": {
    "@cascade/core": "workspace:*",
    "@cascade/tokens": "workspace:*",
    "@stylexjs/stylex": "^0.7.0"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@vitest/ui": "^1.1.0",
    "typescript": "^5.3.3",
    "vite": "^5.0.8",
    "vitest": "^1.1.0"
  },
  "peerDependencies": {
    "react": "^18.0.0"
  }
}

