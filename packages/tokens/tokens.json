{
  "$schema": "https://schemas.w3.org/community/design-tokens",
  "color": {
    "blue": {
      "50": {
        "$value": "oklch(0.95 0.02 250)",
        "$type": "color"
      },
      "100": {
        "$value": "oklch(0.90 0.04 250)",
        "$type": "color"
      },
      "500": {
        "$value": "oklch(0.637 0.237 25.331)",
        "$type": "color"
      },
      "900": {
        "$value": "oklch(0.30 0.15 250)",
        "$type": "color"
      }
    },
    "primary": {
      "$value": "{color.blue.500}",
      "$type": "color"
    }
  },
  "space": {
    "scale": {
      "$value": 1.5,
      "$type": "number"
    },
    "xs": {
      "$value": "0.25rem",
      "$type": "dimension"
    },
    "sm": {
      "$value": "0.5rem",
      "$type": "dimension"
    },
    "md": {
      "$value": "calc(1rem * {space.scale})",
      "$type": "dimension"
    },
    "lg": {
      "$value": "calc(1.5rem * {space.scale})",
      "$type": "dimension"
    },
    "xl": {
      "$value": "calc(2rem * {space.scale})",
      "$type": "dimension"
    }
  },
  "motion": {
    "duration": {
      "fast": {
        "$value": "150ms",
        "$type": "duration"
      },
      "normal": {
        "$value": "300ms",
        "$type": "duration"
      },
      "slow": {
        "$value": "600ms",
        "$type": "duration"
      }
    },
    "easing": {
      "ease": {
        "$value": "cubic-bezier(0.4, 0, 0.2, 1)",
        "$type": "cubic-bezier"
      },
      "ease-in": {
        "$value": "cubic-bezier(0.4, 0, 1, 1)",
        "$type": "cubic-bezier"
      },
      "ease-out": {
        "$value": "cubic-bezier(0, 0, 0.2, 1)",
        "$type": "cubic-bezier"
      },
      "ease-in-out": {
        "$value": "cubic-bezier(0.4, 0, 0.2, 1)",
        "$type": "cubic-bezier"
      },
      "bounce": {
        "$value": "cubic-bezier(0.34, 1.56, 0.64, 1)",
        "$type": "cubic-bezier"
      }
    },
    "spring": {
      "default": {
        "stiffness": {
          "$value": 300,
          "$type": "number"
        },
        "damping": {
          "$value": 20,
          "$type": "number"
        },
        "mass": {
          "$value": 1,
          "$type": "number"
        }
      }
    }
  },
  "typography": {
    "font-family": {
      "sans": {
        "$value": ["system-ui", "-apple-system", "sans-serif"],
        "$type": "fontFamily"
      }
    },
    "font-size": {
      "sm": {
        "$value": "clamp(0.875rem, 0.8rem + 0.375vw, 1rem)",
        "$type": "dimension"
      },
      "base": {
        "$value": "clamp(1rem, 0.9rem + 0.5vw, 1.125rem)",
        "$type": "dimension"
      },
      "lg": {
        "$value": "clamp(1.125rem, 1rem + 0.625vw, 1.5rem)",
        "$type": "dimension"
      }
    }
  },
  "layout": {
    "breakpoint": {
      "sm": {
        "$value": "40rem",
        "$type": "dimension"
      },
      "md": {
        "$value": "64rem",
        "$type": "dimension"
      },
      "lg": {
        "$value": "80rem",
        "$type": "dimension"
      }
    }
  }
}

