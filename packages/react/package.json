{
  "name": "@cascade/react",
  "version": "0.1.0",
  "description": "Layout primitives (Stack, Cluster, Frame) using StyleX and tokens",
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "source": "./src/index.ts",
  "exports": {
    ".": {
      "source": "./src/index.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.js",
      "types": "./dist/index.d.ts",
      "default": "./src/index.ts"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsc",
    "typecheck": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest"
  },
  "dependencies": {
    "@cascade/core": "workspace:*",
    "@cascade/tokens": "workspace:*",
    "@cascade/motion-runtime": "workspace:*",
    "@stylexjs/stylex": "^0.7.0"
  },
  "devDependencies": {
    "@stylexjs/babel-plugin": "^0.7.0",
    "@testing-library/react": "^14.1.2",
    "@testing-library/jest-dom": "^6.1.5",
    "@vitest/ui": "^1.1.0",
    "@vitejs/plugin-react": "^4.2.1",
    "jsdom": "^23.0.1",
    "typescript": "^5.3.3",
    "vitest": "^1.1.0"
  },
  "peerDependencies": {
    "react": "^18.0.0"
  }
}

